//Callback: get/render requests
function getRequests(...type) {

	type.forEach(t => {
		var settings = {
			"url": "http://localhost:8080/ExpenseReimbursementSystem/rest/ers/all/1",
			"method": "GET",
			"timeout": 0,
		};

		$.ajax(settings).done(function(response) {
			console.log(response);
		});
	}
	)
}